! Цветовая схема

! Normal
! color0    black
! color1    red
! color2    green
! color3    yellow
! color4    blue (синий)
! color5    purple (фиолетовый)
! color6    cyan (голубой)
! color7    white

URxvt*color0:    #000000
URxvt*color1:    #C00000
URxvt*color2:    #00C000
URxvt*color3:    #C0C000
URxvt*color4:    #0C00C0
URxvt*color5:    #AA00AA
URxvt*color6:    #00AAAA
URxvt*color7:    #FFFFFF

! Light
! color8    darkgray
! color9    red
! color10    green
! color11    yellow
! color12    blue (синий)
! color13    purple (фиолетовый)
! color14    cyan (голубой)
! color15    lightgray

URxvt*color8:    #212121
URxvt*color9:    #FF8080
URxvt*color10:    #80FF80
URxvt*color11:    #FFFF88
URxvt*color12:    #99CCFF
URxvt*color13:    #B14CC2
URxvt*color14:    #9BFFFF
URxvt*color15:    #D0D0D0


! Установка шрифта "Droid Sans Mono Italic" с размером 20 пунктов c сглаживанием
URxvt.font: xft:Droid Sans Mono:pixelsize=16:antialias=true
! Powerline:
! URxvt.font: xft:Terminess Powerline:size=12
URxvt.boldFont: xft:Droid Sans Mono:bold:pixelsize=16:antialias=true

! Цвет фона
URxvt*background: black
! Цвет текста
URxvt*foreground: #00FF00
! Выделение подчеркнутого текста синим [ссылок]
URxvt.underlineColor: blue

! Цвет курсора
URxvt.cursorColor: green
! Мерцание курсора
URxvt.cursorBlink: true

! Скроллбар: присутствует
URxvt*scrollBar: false


! подгружаем плагины
URxvt.perl-ext-common: default,matcher,url-select,tabbed,keyboard-select,resize-font

! Псевдопрозрачность
URxvt.transparent: true
! Уменьшение (-100 .. -1) или увеличение (0 .. 100) яркости прозрачного фона
URxvt.shading: 25

! первоночальный размер окна
URxvt.geometry: 80x25

! binds ^+shift+V to "clipboard" extension
! URxvt.keysym.Shift-Control-V: perl:clipboard:paste
! desiables iso14755 mode
URxvt.iso14755: False
URxvt.iso14755_52: false

! Farbe der Tabs
URxvt.tabbed.tabbar-fg: 2
URxvt.tabbed.tabbar-bg: 0
URxvt.tabbed.tab-fg: 3
URxvt.tabbed.tab-bg: 0

! Resizing font on the fly
URxvt.resize-font.smaller: C-Down
URxvt.resize-font.bigger: C-Up

! Selection Mode
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search

! Use Meta-Escape to activate selection mode, then use the following keys:
! h/j/k/l:    Move cursor left/down/up/right (also with arrow keys)
! g/G/0/^/$/H/M/L/f/F/;/,/w/W/b/B/e/E: More vi-like cursor movement keys
! '/'/?:      Start forward/backward search
! n/N:        Repeat last search, N: in reverse direction
! Ctrl-f/b:   Scroll down/up one screen
! Ctrl-d/u:   Scroll down/up half a screen
! v/V/Ctrl-v: Toggle normal/linewise/blockwise selection
! y/Return:   Copy selection to primary buffer, Return: quit afterwards
! Y:          Copy selected lines to primary buffer or cursor line and quit
! q/Escape:   Quit keyboard selection mode

URxvt.keysym.C-Shift-Return: ranger \015

