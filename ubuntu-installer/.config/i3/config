# Audio control
#bindsym XF86AudioMute exec amixer -c 0 set Master toggle
#bindsym XF86AudioRaiseVolume exec amixer -c 0 set Master 5+
#bindsym XF86AudioLowerVolume exec amixer -c 0 set Master 5-

# PulseAudio
bindsym XF86AudioRaiseVolume exec $psst amixer -D pulse sset Master 5%+ $update
bindsym XF86AudioLowerVolume exec $psst amixer -D pulse sset Master 5%- $update
bindsym XF86AudioMute        exec $psst pactl set-sink-mute @DEFAULT_SINK@ toggle $update
bindsym Shift+XF86AudioRaiseVolume exec pactl set-sink-volume alsa_output.pci-0000_00_1b.0.analog-stereo +5%
bindsym Shift+XF86AudioLowerVolume exec pactl set-sink-volume alsa_output.pci-0000_00_1b.0.analog-stereo -5%
bindsym Shift+XF86AudioMute        exec $psst pactl set-sink-mute alsa_output.pci-0000_00_1b.0.analog-stereo toggle $update

